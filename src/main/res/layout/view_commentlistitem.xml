<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="8dp">

    <TextView
        android:id="@+id/commentlist_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:maxWidth="80dp"
        android:textSize="16sp"
        android:layout_marginLeft="8dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/commentlist_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_comment_frame_horizental"
        android:layout_toRightOf="@id/commentlist_item_name"
        android:text="content"
        android:textSize="16sp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        />

    <TextView
        android:id="@+id/commentlist_item_support"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="12sp"
        android:layout_below="@id/commentlist_item_content"
        android:layout_marginTop="8dp"
        android:layout_alignLeft="@id/commentlist_item_content"
        android:layout_marginLeft="8dp"
        android:textColor="#666"
        />

    <TextView
        android:id="@+id/commentlist_item_against"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="12sp"
        android:layout_below="@id/commentlist_item_content"
        android:layout_toRightOf="@id/commentlist_item_support"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:textColor="#666"
        />

    <TextView
        android:id="@+id/commentlist_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time"
        android:layout_below="@id/commentlist_item_content"
        android:layout_marginTop="8dp"
        android:layout_alignRight="@id/commentlist_item_content"
        android:textSize="12sp"
        android:textColor="#666"
        />

</RelativeLayout>