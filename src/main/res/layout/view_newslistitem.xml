<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
    >

    <TextView
        android:id="@+id/newslist_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="title"
        android:textSize="16sp"
        android:textColor="#036"
        />
    
    <ImageView
        android:id="@+id/newslist_item_theme"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_below="@id/newslist_item_title"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/newslist_item_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/newslist_item_theme"
        android:layout_toRightOf="@id/newslist_item_theme"
        android:layout_marginLeft="8dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:text="summary"
        />

    <TextView
        android:id="@+id/newslist_item_comment_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/newslist_item_summary"
        android:layout_below="@id/newslist_item_summary"
        android:layout_marginTop="8dp"
        android:text="0"
        android:textSize="12sp"
        android:drawableLeft="@drawable/ic_hot_count"
        android:drawablePadding="5dp"
        android:layout_alignParentBottom="true"
        android:textColor="#666"
        />

    <TextView
        android:id="@+id/newslist_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/newslist_item_comment_count"
        android:layout_alignParentRight="true"
        android:text="time"
        android:textSize="12sp"
        android:textColor="#666"
        />

</RelativeLayout>