<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/news_header_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#123456"/>

    <TextView
        android:id="@+id/news_header_comment_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/news_header_image"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:text="0"
        android:textSize="12sp"
        android:textColor="#CCC"
        android:drawableLeft="@drawable/ic_hot_count"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        />

    <TextView
        android:id="@+id/news_header_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/news_header_comment_count"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:textSize="12sp"
        android:textColor="#CCC"
        android:text="发表于 2014-01-07 17:05:52"
        />

    <TextView
        android:id="@+id/news_header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="马云：我从来没有想过自己会这么成功"
        android:layout_above="@+id/news_header_comment_count"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:textColor="#FFF"
        android:textSize="28sp"
        android:layout_marginRight="100dp"
        android:gravity="left"
        />


</RelativeLayout>